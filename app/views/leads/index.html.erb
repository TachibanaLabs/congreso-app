<script>
    const getRemainingTime = deadline => {
        let now = new Date(),
            remainTime = (new Date(deadline) - now + 1000) / 1000,
            remainSeconds = ('0' + Math.floor(remainTime % 60)).slice(-2),
            remainMinutes = ('0' + Math.floor(remainTime / 60 % 60)).slice(-2),
            remainHours = ('0' + Math.floor(remainTime / 3600 % 24)).slice(-2),
            remainDays = Math.floor(remainTime / (3600 * 24));

        return {
            remainSeconds,
            remainMinutes,
            remainHours,
            remainDays,
            remainTime
        }
    };

    const countdown = (deadline, elem, finalMessage) => {
        const el = document.getElementById(elem);

        const timerUpdate = setInterval(() => {
            let t = getRemainingTime(deadline);
            el.innerHTML = `${t.remainDays} Dias ${t.remainHours} Horas ${t.remainMinutes} Minutos ${t.remainSeconds} Segundos`;

            if (t.remainTime <= 1) {
                clearInterval(timerUpdate);
                el.innerHTML = finalMessage;
            }

        }, 1000)
    };

    countdown('Nov 14 2018 00:00:00 GMT-0500', 'clock', '¡Comenzamos!');

    var file = document.getElementById("lead_file");
    file.onchange = function () {
        if (file.files.length > 0) {
            document.getElementById('file-filename').innerHTML = file.files[0].name;
        }
    };

    var summary = document.getElementById("lead_summary");
    summary.onchange = function () {
        if (summary.files.length > 0) {
            document.getElementById('summary-filename').innerHTML = summary.files[0].name;
        }
    };
</script>
